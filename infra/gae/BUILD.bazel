pkg_tar(
    name = "requirements",
    srcs = [
        requirement("certifi"),
        requirement("chardet"),
        requirement("Click"),
        requirement("Flask"),
        requirement("idna"),
        requirement("itsdangerous"),
        requirement("Jinja2"),
        requirement("MarkupSafe"),
        requirement("PyYAML"),
        requirement("requests"),
        requirement("urllib3"),
        requirement("Werkzeug"),
    ],
    mode = "0755",
    package_dir = "/python_requirements/adamyi/",
    strip_prefix = ".",
)

container_image(
    name = "image",
    base = "@tomcat-jython//image",
    cmd = ["/run.sh"],
    entrypoint = [
        "/bin/sh",
        "-c",
    ],
    env = {
        "JYTHONPATH": "/geegle/gae/java",
    },
    files = [
        ":run.sh",
        ":src",
        ":tomcat",
    ],
    symlinks = {
        "/usr/local/tomcat/conf/Catalina/localhost/ROOT.xml": "/tomcat/ROOT.xml",
        "/usr/local/tomcat/conf/server.xml": "/tomcat/server.xml",
        "/geegle/gae": "/src",
    },
    tars = [
        ":requirements",
    ],
    visibility = ["//visibility:public"],
)

container_image(
    name = "image2",
    base = "@tomcat-jython//image",
    visibility = ["//visibility:public"],
)
